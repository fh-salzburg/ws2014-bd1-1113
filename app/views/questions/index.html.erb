<div class="page-header">
  <h1>Fragen</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Titel</th>
      <th>Text</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.title, question_path(question) %></td>
        <td><%= question.body %></td>
        <td>
          <%= link_to "Ändern", edit_question_path(question), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Löschen", question_path(question),
            :method => :delete, :data => { :confirm => "Wirklich löschen?" }, :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Neue Frage", new_question_path, :class => 'btn btn-primary' %>
